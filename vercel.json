{
  "version": 2,
  "builds": [
    {
      "src": "api/trigger-daily-view.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/trigger-daily-view",
      "dest": "/api/trigger-daily-view.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
